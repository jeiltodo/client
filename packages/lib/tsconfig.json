{
  "extends": "@jeiltodo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["**/*.ts", "**/*.tsx"], // TypeScript 파일만 포함
  "exclude": ["dist", "node_modules"]
}
